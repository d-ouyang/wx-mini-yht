.container{
  overflow: auto;
}
.personal-header{
  position: relative;
  width: 100%;
  height: 300rpx;
}
.personal-header > image{
  position: absolute;
  width: 100%;
  height: 300rpx;
}
.personal-info {
  position: relative;
  top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar{
  width: 160rpx;
  height: 160rpx;
  border: 6rpx solid #fff;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.nickname{
  font-size: 30rpx;
  color:#fff;
  line-height: 1.0;
  font-weight: 500;
}
.bind-phone{
  position: absolute;
  width: 230rpx;
  height: 222rpx;
  left: 260rpx;
  top: 0;
  background-color: transparent;
}

.login-btn-wrapper{
  top: 100rpx;
  position: relative;
  text-align: center;
}
.login-btn-wrapper button{
  width: 620rpx;
  height: 80rpx;
  font-size: 32rpx;
}

.getphone-wrapper{
  top: 140rpx;
  position: relative;
  text-align: center;
}
.getphone-wrapper button{
  width: 620rpx;
  height: 80rpx;
  font-size: 32rpx;
}

.functions{
  position: relative;
  box-sizing: content-box;
  background-color: #fff;
  padding: 0 40rpx;
}
.function-item{
  box-sizing: content-box;
  padding: 26rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 0.5px solid #F4F6FA;
}
.function-item > image{
  width: 18rpx;
  height: 30rpx;
}
.function-item-title{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.function-item-title image{
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
}
.function-item-title text{
  font-size: 32rpx;
  color: #3A4557;
  font-weight: 500;
  letter-spacing: 2rpx;
}
.no-phone {
  position: absolute;
  width: 100%;
  height: 204rpx;
  left: 0;
  top: 0;
}
.get-phone{
  width: 100%;
  height: 100%;
  opacity: 0;
}