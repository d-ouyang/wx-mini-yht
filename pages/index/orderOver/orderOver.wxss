.order-over-header{
  position: relative;
  height: 434rpx;
}
.order-over-bg{
  position: absolute;
  width: 100%;
  height: 434rpx;
}
.order-over-header-text{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 72rpx;
}
.order-over-header-text image{
  width: 106rpx;
  height: 74rpx;
  margin-bottom: 38rpx;
}
.order-over-header-text view{
  font-family: 'PingFangSC';
  font-size: 48rpx;
  font-weight: 500;
  color: #fff;
}

.order-info-wrapper{
  position: relative;  
  box-sizing: border-box;
  padding: 0 40rpx;
  background-color: #fff;
  border-bottom: 0.5px solid #ECECEC;
}
.order-info-plate{
  font-size: 44rpx;
  color: #2F2F33;
  font-weight: 600;
  letter-spacing: 2rpx;
  padding: 48rpx 0;
}
.order-info-item{
  width: 100%;
  box-sizing: border-box;
  padding: 26rpx 0;
  border-bottom: 0.5px solid #F4F6FA;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-weight: 500;
}
.order-info-item:last-of-type{
  border-bottom: 0; 
}
.order-title{
  font-size: 32rpx;
  color: #79808A;
  letter-spacing: 2rpx;
}
.order-value{
  font-size: 30rpx;
  color: #9DADBD;
  letter-spacing: 2rpx;
}

.order-desc{
  font-family: 'PingFangSC';
  font-size: 24rpx;
  color: #ccc;
  line-height: 1.0;
  letter-spacing: 2rpx;
  padding-left: 40rpx;
  margin-top: 14rpx;
}

.order-btn{
  margin-top: 214rpx;
  text-align: center;
}
.order-btn button{
  width: 620rpx;
  height: 96rpx;
  background-color: #ED3E35;
  border-radius: 4rpx;
  color: #fff;
  font-size: 32rpx;
  font-family: 'PingFangSC';
  font-weight: 500;
  line-height: 96rpx;
  border: 0;
}