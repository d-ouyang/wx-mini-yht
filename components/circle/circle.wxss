.circle{
  position: relative;
  width: 30px;
  height: 30px;
}
.circle-bottom{
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.circle-middle{
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;    
}
.circle-item{
  position: absolute;
  width: 50%;
  height: 50%;
  left: 50%;
  top: 0;
  transform-origin: left bottom;
}
.circle-top{
  position: absolute;
  width: 22px;
  height: 22px;
  left: 4px;
  top: 4px;
  border-radius: 50%;
  background-color: #fff;
}