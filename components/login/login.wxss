.login-container{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5)
}
.login-box{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 590rpx;
  height: 346rpx;
  background-color: #fff;
  border-radius: 8rpx;
  top: 360rpx;
  left: 80rpx;
}
.title{
  font-size: 34rpx;
  font-weight: 600;
  margin: 64rpx auto 54rpx;
  line-height: 1.0;
}
.login-btn{
  width: 442rpx;
  height: 88rpx;
  border-radius: 8rpx;
  background-color: #1AAD19;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #F9F9F9;
  font-size: 30rpx;
  margin-bottom: 24rpx;
  font-weight: 500;
}
.login-btn image{
  width: 52rpx;
  height: 52rpx;
  margin-right: 6rpx;
}
.login-btn text{
  line-height: 1.0;
}
.unlogin{
  font-size: 28rpx;
  color: #BBBBBB;
  line-height: 1.0;
}

