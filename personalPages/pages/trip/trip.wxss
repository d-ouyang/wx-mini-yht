.trips-list{
  width: 100%;
  padding: 26rpx 40rpx;
  box-sizing: border-box;
  background-color: #F4F6FA;
}

.trip-item{
  width: 100%;
  height: 244rpx;
  box-sizing: border-box;
  box-shadow: 0 20rpx 30rpx 0 rgba(0, 0, 0, 0.03);
  border-radius: 20rpx;
  background-color: #fff;
  padding: 28rpx 24rpx 22rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.trip-item-title{
  line-height: 1.0;
}
.trip-item-name{
  font-size: 32rpx;
  color: rgb(49, 64, 87);
  font-weight: 600;
  margin-bottom: 14rpx;
}
.trip-item-plate{
  font-size: 24rpx;
  color: rgba(58, 69, 87, 0.5);
  font-weight: 500;
}
.trip-item-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.timing{
  position: relative;
}
.trip-item-time{
  font-size: 28rpx;
  color: #3A4557;
  font-weight: 400;
  font-family: PingFang-SC;
  line-height: 1.0;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 18rpx;
}
.trip-item-time image{
  width: 14rpx;
  height: 14rpx;
  margin-right: 12rpx;
}
.trip-item-time .time-d{
  font-family: Helvetica;
  font-weight: bold;
  margin-left: 12rpx;
}
.left-dashed{
  position: absolute;
  width: 4rpx;
  height: 24rpx;
  border-left: 0.5px dashed rgba(58,69,87,0.2);
  left: 6rpx;
  top: 24rpx;
}
.trip-item-amount{
  font-size: 40rpx;
  color: #D5D5EF;
  font-weight: 600;
  line-height: 1.0;
}
.trip-item-amount text{
  color: #ED3E35;
  font-family: Colfax;
  line-height: 1.0;
}

