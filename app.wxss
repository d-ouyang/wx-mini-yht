text{
  line-height: 1.5
}
.box-sizing{
  box-sizing: border-box;
}
.no-wrap{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
input{
  border: 0;
  outline: none;
}
button::after{
  border: none; 
}
/*每个页面的统一基础样式  */
page{
  width: 100%;
  height: 100%;
  font-family: PingFangSC, '微软雅黑', Arial, sans-serif;
}
.container{
  width: 100%;
  height: 100%;
  background-color: #F4F6FA;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}